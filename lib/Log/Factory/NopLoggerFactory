<?php
/**
 * NopLoggerFactory.php file containing Kount_Access_NopLoggerFactory class.
 */

/**
 * A factory class that creates Kount_Access_NopLogger objects.
 *
 * @package Kount_Access_Log
 * @subpackage Factory
 * @author Kount <custserv@kount.com>
 * @copyright 2012 Kount, Inc. All Rights Reserved.
 */
class Kount_Access_NopLoggerFactory implements Kount_Access_LoggerFactory {

  /**
   * Get a Nop Logger.
   * @param string $name Logger name
   * @return Kount_Access_NopLogger
   */
  public static function getLogger ($name) {
    return new Kount_Access_NopLogger($name);
  }

} // end Kount_Log_Factory_NopLoggerFactory


